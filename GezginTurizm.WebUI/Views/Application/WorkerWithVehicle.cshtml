        <div class="form-group row mt-4 mb-4">
            <label class="col" for="VehicleColor">Rengi</label>
            <input asp-for="VehicleColor" class="form-control col" required>
            <div class="validate"></div>
        </div>
        <div class="form-group row mt-4 mb-4">
            <label class="col" for="VehicleSeatNumber">Sürücü Dahil Koltuk Sayısı</label>

            <label class="col" for="VehiclePlate">Plakası</label>
            <input asp-for="VehiclePlate" class="form-control col" required>
            <div class="validate"></div>
        </div>
        <div class="form-group row mt-4 mb-4">
            <label class="col" for="VehicleBrand">Markası</label>
            <input asp-for="VehicleBrand" class="form-control col" required>
            <div class="validate"></div>
        </div>
        <div class="form-group row mt-4 mb-4">
            <label class="col" for="VehicleModel">Modeli</label>
            <select asp-for="VehicleModel" asp-items="@ViewBag.VehicleModel" class="form-control col">
                <option selected disabled>Yıl Seçiniz</option>
            </select>
            <div class="validate"></div>
        </div>
        <div class="form-group row mt-4 mb-4">
            <label class="col" for="VehicleType">Cinsi</label>
            <input asp-for="VehicleType" class="form-control col" required>
            <div class="validate"></div>

@model List<ContactEdit>
@{
    ViewData["Title"] = "Contact";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>İletişim</h2>
            </div>
        </div>
    </section>

    <!-- End Breadcrumbs -->
    <!-- ======= Contact Us Section ======= -->
    <section id="contact-us" class="contact-us">
        <div class="container">
            @if (TempData["QaWbmqwAAaaxZzxcMwqrqrsAdAXaCAVrBxX"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["QaWbmqwAAaaxZzxcMwqrqrsAdAXaCAVrBxX"]
                </div>
            }
            @if (TempData["REDbmqwAAaaxZzxcMwqrqrsAdAXaCAVrBxX"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["REDbmqwAAaaxZzxcMwqrqrsAdAXaCAVrBxX"]
                </div>
            }
            @foreach (var item in Model)
            {
                <div>
                    <iframe style="border:0; width: 100%; height: 270px;" src="@item.Maps" frameborder="0" allowfullscreen></iframe>
                </div>
                <div class="row mt-5">
                    <div class="col-lg-4">
                        <div class="info">
                            <div class="address">
                                <i class="bi bi-geo-alt"></i>
                                <h4>Adres:</h4>
                                <p>@item.Address</p>
                            </div>
                            <div class="email">
                                <i class="bi bi-envelope"></i>
                                <h4>E-posta:</h4>
                                <p>@item.Email1</p>
                                <p>@item.Email2</p>
                            </div>
                            <div class="phone">
                                <i class="bi bi-phone"></i>
                                <h4>Telefon:</h4>
                                <p>@item.Phone1</p>
                                <p>@item.Phone2</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 mt-5 mt-lg-0">
                        <form asp-controller="Home" asp-action="Contact" method="POST">
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <input type="text" name="ContactName" id="ContactName" class="form-control" placeholder="Adınız" required>
                                    <div class="validate"></div>
                                </div>
                                <div class="col-md-6 form-group mt-3 mt-md-0">
                                    <input type="email" class="form-control" name="ContactEmail" id="ContactEmail" placeholder="E-posta Adresiniz" required>
                                    <div class="validate"></div>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <input class="form-control" type="text" name="ContactSubject" id="ContactSubject" placeholder="Konu" data-rule="minlen:4" required>
                                <div class="validate"></div>
                            </div>
                            <div class="form-group mt-3">
                                <textarea class="form-control" type="text" name="ContactMessage" id="ContactMessage" rows="5" placeholder="Mesajınız" required></textarea>
                                <div class="validate"></div>
                            </div>
                            <br />
                            <div class="text-center"><button class="btn btn-block btn-primary" type="submit">Gönder</button></div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </section><!-- End Contact Us Section -->
</main><!-- End #main -->

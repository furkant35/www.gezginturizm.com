@model List<Institutional>
@{
    ViewData["Title"] = "Institutional";
}


<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Kurumsal</h2>
        </div>
    </div>
</section>
<!-- End Breadcrumbs -->
@foreach (var item in Model)
{
    <!-- ======= Why Us Section ======= -->
    <section id="why-us" class="why-us">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="card">
                        <img src="~/img/institutional/@item.AboutUsPhoto" class="card-img-top" alt="...">
                        <div class="card-icon">
                            <i class="bx bx-book-reader"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><a href="">Hakkımızda</a></h5>
                            <p class="card-text">
                                @item.AboutUs
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="card">
                        <img src="~/img/institutional/@item.OurMissionPhoto" class="card-img-top" alt="...">
                        <div class="card-icon">
                            <i class="bx bx-calendar-edit"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><a href="">Misyonumuz</a></h5>
                            @item.OurMission
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="card">
                        <img src="~/img/institutional/@item.OurVisionPhoto" class="card-img-top" alt="...">
                        <div class="card-icon">
                            <i class="bx bx-landscape"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><a href="">Vizyonumuz</a></h5>
                            @item.OurVision
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section><!-- End Why Us Section -->
}

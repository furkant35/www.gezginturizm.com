@model OurServicesModel
@{
    ViewData["Title"] = "EmployeeControl";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Hizmetlerimiz/Personel Kontrol</h2>
        </div>
    </div>
</section>
<!-- End Breadcrumbs -->

<br />
<br />
@if (TempData["qqewrqbqrwqtmqAAAADazdaRemNeMpLoye"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["qqewrqbqrwqtmqAAAADazdaRemNeMpLoye"]
    </div>
}
<div class="container  ml-5 mr-5">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Hizmet Detayı</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.EmployeeTransports)
            {
                {
                    <tr>
                        <td>@item.Text</td>
                        <td><a href="#myModal_@item.Id" class="btn btn-outline-danger" data-toggle="modal" data-target="#myModal_@item.Id"><i class="bi bi-trash"></i></a></td>
                    </tr>
                }
                <div class="modal fade" id="myModal_@item.Id">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Uyarı</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <!-- Modal body -->
                            <div class="modal-body">
                                Silme işlemini onaylıyor musun ?
                            </div>
                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <a href=@Url.Action("EmployeeControlDelete","ManagementPanel",new { id=@item.Id , dosyaadi=@item.Text }) class="btn btn-danger">Sil</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <tr><td colspan="3"><a class="btn btn-primary" asp-controller="ManagementPanel" asp-action="EmployeeControlAdd">Yeni Hizmet Ekle</a></td></tr>
        </tbody>
    </table>
</div>

@model List<IconDescription>
@{
    ViewData["Title"] = "IconDescription";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>İkonlu Açıklamalar</h2>
        </div>
    </div>
</section>
<!-- End Breadcrumbs -->

<br />
<br />
@if (TempData["QaWbEqwrmqwtmqYGZAaAxVRfT"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["QaWbEqwrmqwtmqYGZAaAxVRfT"]
    </div>
}
<div class="container  ml-5 mr-5">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>İçerik</th>
                <th>İkon</th>
                <th>Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                {
                    <tr>
                        <td>@item.ShortDescription</td>
                        <td>@item.LongDescription</td>
                        <td><i class="@item.Icon"></i></td>
                        <td><a href="/ManagementPanel/IconDescriptionUpdate/@item.Id" class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i></a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>




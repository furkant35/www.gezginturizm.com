@model StudentTransport
@{
    ViewData["Title"] = "StudentControlAdd";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Hizmetlerimiz/Öğrenci Kontrol</h2>
        </div>
    </div>
</section>
<!-- End Breadcrumbs -->

<br />
<br />


<form asp-controller="ManagementPanel" asp-action="StudentControlAdd" method="POST">
    <div class="container">
        <div class="form-group row mt-4 mb-4">
            <label class="col" for="HizmetCategoryId">Kategori</label>
            <select asp-for="ServiceCategoryId" class="form-control col">
                <option>2</option>
            </select>
        </div>
        <div class="form-group row mt-4 mb-4">
            <label class="control-label col" for="Text">Öğrenci Taşımacılığı İçerik</label>
            <input class="form-control col" asp-for="Text" placeholder="İçerik" data-rule="minlen:4" required>
            <div class="validate"></div>
        </div>
        <div class="row">
            <input type="submit" class="btn btn-block btn-info" asp-action="StudentControlAdd" asp-controller="ManagementPanel" />
        </div>
    </div>
</form>


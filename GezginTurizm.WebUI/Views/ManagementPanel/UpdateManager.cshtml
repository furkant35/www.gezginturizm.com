    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <!--    <h2>Yönetici Güncelle :<strong class="text-xl-start"> @ViewBag.basvuru </strong> </h2>-->
            <a asp-action="FindManager" asp-controller="ManagementPanel" class="btn btn-info">Geri Dön</a>
        </div>
    </div>
</section>

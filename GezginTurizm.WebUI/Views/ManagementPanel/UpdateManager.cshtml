<div class="container ml-5 mr-5">
    <form asp-controller="ManagementPanel" asp-action="UpdateManager" method="post">
        <div class="form-group">
            <label for="UserName">Kullanıcı adınız</label>
            <input asp-for="UserName" class="form-control" value="@Model.UserName" disabled />
            <div class="validate"></div>
        </div>
        <div class="form-group mt-2">
            <label for="Password">Şifrenizi giriniz</label>
            <input type="password" class="form-control" asp-for="Password">
            <div class="validate"></div>
        </div>
        <div class="form-group mt-2">
            <label for="SecretQuestion">Gizli Sorunuz</label>
            <select asp-for="SecretQuestion" class="form-control col">
                <option selected disabled>@Model.SecretQuestion</option>
            </select>
            <div class="validate"></div>
        </div>
        <div class="form-group mt-2">
            <label for="SecretAnswer">Cevabınızı Yazınız</label>
            <input asp-for="SecretAnswer" class="form-control">
        </div>
        <div class="row container mt-5">
            <input type="submit" value="Güncelle" class="btn btn-outline-primary" />
        </div>
    </form>
</div>

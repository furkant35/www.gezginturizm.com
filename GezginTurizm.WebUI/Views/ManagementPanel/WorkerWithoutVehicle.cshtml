@model List<WorkerWithoutVehicle>
@{
    ViewData["Title"] = "WorkerWithoutVehicle";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}


<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Gelen Şoförlük Başvuruları</h2>
        </div>
    </div>
</section>
<!-- End Breadcrumbs -->

<br />
<br />

<div class="container ml-5 mr-5">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Okundu</th>
                <th>İşçi Tam Adı</th>
                <th>Sil</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>
                        @if (@x.isRead)
                        {
                            <span class="badge badge-pill bg-success"> <i class="bi bi-hand-thumbs-up"></i></span>
                        }
                        else
                        {
                            <span class="badge badge-pill bg-danger"><i class="bi bi-hand-thumbs-down"></i></span>
                            <a href="/ManagementPanel/WorkerWithoutVehicleRead/@x.WorkerId" class="btn btn-sm btn-outline-success float-end">İnceledim</a>
                        }
                    </td>
                    <td>@x.WorkerName @x.WorkerSurname</td>
                    <td><a href="#myModal_@x.WorkerId" class="btn btn-sm btn-outline-danger" data-toggle="modal" data-target="#myModal_@x.WorkerId"><i class="bi bi-trash"></i></a></td>
                    <td><a href="/ManagementPanel/WorkerWithoutVehicleDetail/@x.WorkerId" class="btn btn-sm btn-outline-warning"><i class="bi bi-info-circle"></i></a></td>
                </tr>
                <div class="modal fade" id="myModal_@x.WorkerId">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Uyarı</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <!-- Modal body -->
                            <div class="modal-body">
                                Silme işlemini onaylıyor musun ?
                            </div>
                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <a href="/ManagementPanel/WorkerWithoutVehicleDelete/@x.WorkerId" class="btn btn-danger">Sil</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>
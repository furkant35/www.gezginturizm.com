@model List<WorkerWithoutVehicle>
@{
    ViewData["Title"] = "WorkerWithoutVehicleDetail";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
@foreach (var x in Model)
{
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Gelen Şoförlük Başvuruları/Başvuran Kişi :<strong> @ViewBag.application2 </strong>/ <a href="#myModal_@x.WorkerId" class="btn btn-sm btn-outline-danger" data-toggle="modal" data-target="#myModal_@x.WorkerId">Başvuruyu Sil</a> </h2>
            </div>
        </div>
    </section>
    <!-- End Breadcrumbs -->
    <div class="modal fade" id="myModal_@x.WorkerId">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Uyarı</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    Silme işlemini onaylıyor musun ?
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <a href="/ManagementPanel/WorkerWithoutVehicleDelete/@x.WorkerId" class="btn btn-danger">Sil</a>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="container ml-5 mr-5">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Doğum Tarihi</th>
                    <th>Telefon</th>
                    <th>Adres</th>
                    <th>Emeklilik Durumu</th>
                    <th>Çalışma Durumu</th>
                    <th>Ehliyet Sınıfı</th>
                    <th>Ehliyet Tarihi</th>
                    <th>Psikoteknik</th>
                    <th>Şoför Tanıtım Kartı</th>
                    <th>Deneyim</th>
                    <th>Açıklama</th>
                    <th>SRC 1</th>
                    <th>SRC 2</th>
                    <th>SRC 3</th>
                    <th>SRC 4</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@x.WorkerDateOfBirth</td>
                    <td>@x.WorkerPhone</td>
                    <td>@x.WorkerAddress</td>
                    <td>
                        @if (x.WorkerRetirementStatus)
                        {
                            <span class="badge badge-pill bg-success">Emekli</span>
                        }
                        else
                        {
                            <span class="badge badge-pill bg-danger">Emekli Değil</span>
                        }
                    </td>
                    <td>
                        @if (x.WorkerWorkStatus)
                        {
                            <span class="badge badge-pill bg-success">Çalışıyor</span>
                        }
                        else
                        {
                            <span class="badge badge-pill bg-danger">Çalışmıyor</span>
                        }
                    </td>
                    <td>@x.WorkerDriverLicenseType</td>
                    <td>@x.WorkerDriverLicenseDate</td>
                    <td>
                        @if (x.WorkerPsychotechnics)
                        {
                            <span class="badge badge-pill bg-success">Var</span>
                        }
                        else
                        {
                            <span class="badge badge-pill bg-danger">Yok</span>
                        }
                    </td>
                    <td>
                        @if (x.WorkerDriverIntroduction)
                        {
                            <span class="badge badge-pill bg-success">Var</span>
                        }
                        else
                        {
                            <span class="badge badge-pill bg-danger">Yok</span>
                        }
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#myModal">
                            <i class="bi bi-eye"></i>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#myModal2">
                            <i class="bi bi-eye"></i>
                        </button>
                    </td>
                    <td>
                        @if (x.WorkerSRC1)
                        {
                            <span class="badge badge-pill bg-success">Var</span>
                        }
                        else
                        {
                            <span class="badge badge-pill bg-danger">Yok</span>
                        }
                    </td>
                    <td>
                        @if (x.WorkerSRC2)
                        {
                            <span class="badge badge-pill bg-success">Var</span>
                        }
                        else
                        {
                            <span class="badge badge-pill bg-danger">Yok</span>
                        }
                    </td>
                    <td>
                        @if (x.WorkerSRC3)
                        {
                            <span class="badge badge-pill bg-success">Var</span>
                        }
                        else
                        {
                            <span class="badge badge-pill bg-danger">Yok</span>
                        }
                    </td>
                    <td>
                        @if (x.WorkerSRC4)
                        {
                            <span class="badge badge-pill bg-success">Var</span>
                        }
                        else
                        {
                            <span class="badge badge-pill bg-danger">Yok</span>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">@ViewBag.application2 deneyim detayı</h4>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    @x.WorkerWorkExperience
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModal2">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">@ViewBag.application2 açıklama detayı</h4>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    @x.Explanation
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

@model SliderPhotoGalleryModel

<!-- ======= Recent Photos Section ======= -->
<section id="recent-photos" class="recent-photos">
    <div class="container">

        <div class="section-title">
            <h2>Foto-Galeri</h2>
        </div>
        <div class="recent-photos-slider swiper-container">
            <div class="swiper-wrapper align-items-center">
                @foreach (var item in Model.PhotoGallery)
                {
                    <div class="swiper-slide"><a href="~/img/recent-photos/@item.PhotoName" class="glightbox"><img src="~/img/recent-photos/@item.PhotoName" class="img-fluid" alt=""></a></div>
                }    
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>
<!-- End Recent Photos Section -->